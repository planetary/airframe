                            table
                                thead
                                    tr
                                        th Variable
                                        th Description
                                        th Default
                                tbody
                                    tr
                                        td <code class="docs--code-inline">--l--grid-width</code>
                                        td Grid Width
                                        td 70rem
                                    tr
                                        td <code class="docs--code-inline">--l--gutter</code>
                                        td Gutter width
                                        td 2%
                        h4 Utility Classes
                        p
