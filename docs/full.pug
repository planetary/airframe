                            table
                                thead
                                    tr
                                        th Class
                                        th
                                        th Possible Values
                                tbody
                                    tr
                                        td <code class="docs--code-inline">.l--col-{number}-at-{size}
                                        td
                                        td.
                                            number: 1-12 or "auto"<br/>
                                            size: s, m, or l
